{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react", "react-dom"],
    "lib": ["ES2020", "DOM"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": { "module": "CommonJS" }
  }
}
